######################################################
################# Setup Elasticsearch ################
######################################################
---

- name: "Create directories"
  file:
    group: "{{ es_group }}"
    owner: "{{ es_user }}"
    mode: u+rw,g+rw
    path: "{{ elastic_dir }}"
    state: directory

- name: Install Templates
  template:
    src: "templates/{{ item }}.j2"
    dest: "{{ elastic_dir }}/{{ item }}"
    group: "{{ es_group }}"
    owner: "{{ es_user }}"
    mode: u+rw,g+rw
  with_items:
    - es-discovery-svc.yml
    - es-master.yml
    - es-data.yml
    - es-svc.yml
    - elastichq.yml
    - elastichq-svc.yml
    - elasticsearch.yml
    - jvm.options
    - log4j2.properties

- name: Flush Config
  command: 'kubectl delete configmap elastic'
  ignore_errors: true

- name: Create Config
  shell: |
    kubectl create configmap elastic --from-file {{ elastic_dir }}/elasticsearch.yml \
    --from-file {{ elastic_dir }}/jvm.options \
    --from-file {{ elastic_dir }}/log4j2.properties

- name: Flush Deployments
  shell: |
    kubectl delete -f {{ elastic_dir }}/{{ item }}.yml
    while [ $(kubectl get -f {{ elastic_dir }}/{{ item }}.yml | tail -n +2 | wc -l) != '0' ]; do
      echo -n .;
      sleep 1;
    done;
    sleep 5;
  with_items:
    - es-discovery-svc
    - es-svc
    - es-data
    - es-master
    - elastichq
    - elastichq-svc
#    - es-client
#    - es-data
  ignore_errors: true

- name: Deploy Pods
  shell: |
    kubectl create -f {{ elastic_dir }}/{{ item }}.yml
    while [ $(kubectl get -f {{ elastic_dir }}/{{ item }}.yml | tail -n +2 | awk '{ print $5}') == '0' ]; do
      echo -n .;
      sleep 1;
    done;
  with_items:
    - es-master
    - es-data
    - elastichq
    #- es-client
    #- es-data

- name: Deploy Services
  command: 'kubectl create -f {{ elastic_dir }}/{{ item }}.yml'
  with_items:
    - es-discovery-svc
    - es-svc
    - elastichq-svc
#    - es-client
#    - es-data

- name: Wait for Elasticsearch to be ready
  shell: |
    while [ "$(kubectl get pods | grep es-master | head -n +1 | awk '{ print $2}')" != "1/1" ]; do
      echo -n .;
      sleep 1;
    done;
